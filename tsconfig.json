{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "rootDir": "components",
    "noEmit": true,
    "incremental": true
    // "outDir": "build/gen"
  },
  "references": [
    {
      "path": "gen"
    }
  ],
  "include": [
    "components/**/*"
  ],
  "exclude": [
    "node_modules",
    "_archive",
    "build",
    "public"
  ]
}